block b-card {

    content: [
        {
            elem: 'left',
            content: {
                elem: 'text',
                content: this.ctx.content
            }
        },
        { elem: 'top', tag: 'i', content: { elem: 'arrow', content: { elem: 'shape' } } },
        { elem: 'bottom', tag: 'i', content: { elem: 'arrow', content: { elem: 'shape' } } }
    ]

    elem arrow, tag: 'i'

    elem shape, tag: 'i'

}